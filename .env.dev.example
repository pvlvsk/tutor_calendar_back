# ============================================
# DEV ENVIRONMENT (.env для локальной разработки и QA)
# ============================================
# Скопируй этот файл как .env:
#   cp .env.dev.example .env
#
# После первого запуска выполни:
#   docker exec -it teach-postgres psql -U postgres -c "ALTER USER postgres WITH PASSWORD 'postgres123';"
# ============================================

# Node Environment
NODE_ENV=development

# Database (Docker)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=teach_mini_app

# DATABASE_URL формируется в docker-compose.yml, но можно указать явно
DATABASE_URL=postgresql://postgres:postgres123@postgres:5432/teach_mini_app

# Backend
BACKEND_PORT=3000

# JWT
JWT_SECRET=dev-jwt-secret-key-minimum-32-characters
JWT_EXPIRES_IN=7d

# Telegram Bot (тестовый бот)
BOT_TOKEN=your_test_bot_token_here
BOT_USERNAME=your_test_bot_username

# Beta Access (опционально)
# BETA_CODE=beta_2025

# ============================================
# Admin Panel
# ============================================
# JWT секрет для админ-панели (в dev можно оставить дефолтный)
# ADMIN_JWT_SECRET=admin-dev-secret
WEBAPP_URL=http://localhost:5173
